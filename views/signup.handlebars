<!--Signup Form-->
<div class="container">
  <div class="row center">
    <div class="col xl6 l6 m8 s10 offset-xl3 offset-l6 offset-m2 offset-s1 z-depth-4">
      <form action="/signup" method="post">
        <div class="row">
          <div class="col s10 offset-s1">
            <div class="row">
              <div class="input-field col m6 offset-m3" "newUserForm">
                <input name="username" userName="userName" id="newUserName" type="text" class="validate">
                <label class="pink-text text-accent-3" for="userName">User Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col m6 offset-m3" "newUserForm">
                <input name="password" userName="password" id="newUserPassword" type="password" class="validate">
                <label class="pink-text text-accent-3" for="password">Password</label>
              </div>
            </div>
            {{!-- container for info --}}
            <div class="row">
              <div class="input-field col s6 offset-s3" "newUserForm">

                <!-- materialize Dropdown Trigger -->
                <a class="dropdown-trigger btn pink accent-3" href='#' data-target='dropdown1'>Native Language...</a>
                <!-- materialize Dropdown Structure -->
                <ul id='dropdown1' class='dropdown-content'>
                  <li>
                    <a href="#!">
                      <img src="assets/images/flag-of-France.png"></img>France</a>
                  </li>
                  <li>
                    <a href="#!">
                      <img src="assets/images/flag-of-Germany.png"></img>Germany</a>
                  </li>
                  <li>
                    <a href="#!">
                      <img src="assets/images/flag-of-Spain.png"></img>Spain</a>
                  </li>
                  <li>
                    <a href="#!">
                      <img src="assets/images/flag-of-United-Kingdom.png"></img>United Kingdom</a>
                  </li>
                  <li>
                    <a href="#!">
                      <i class="material-icons"></i>United States</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6 offset-s3" "newUserForm">
                <input name="age" id="newUserAge" type="age" class="validate">
                <label class="pink-text text-accent -3" for="age">Age</label>
              </div>
            </div>
            <div class="row">
              <div class="col m12" "newUserForm">
                <div class="gender">
                  {{!--
                  <input name="gender" id="newUserGender" type="gender" class="validate"> --}} {{!--
                  <label class="pink-text text-accent-3" for="gender">Gender</label> --}}

                  <!--materialize radio buttons vertical -->
                  <label class="pink-text text-accent-3 radio-label">
                    <input type="radio" name="editList" value="Male" class="pink-text text-accent-3 radio-button-css" />Male
                  </label>
                  <label class="pink-text text-accent-3 radio-label">
                    <input type="radio" name="editList" value="Female" class="pink-text text-accent-3 radio-button-css" />Female
                  </label>
                  <label class="pink-text text-accent-3 radio-label">
                    <input type="radio" name="editList" value="Other" class="pink-text text-accent-3 radio-button-css" />Other
                  </label>
                </div>
              </div>
            </div>
            {{!--
            <input type="text" class="datepicker"> --}}
            <div class="row">
              <div class="input-field col s12" "newUserForm">
                <input style="height:200px;width:300px;font-size:10pt;" name="about" id="newUserAbout" type="aboutMe" class="validate" maxlength="200">
                <label class="pink-text text-accent-3" for="aboutMe">About Me</label>
              </div>
            </div>
            <button id="logInUser" class="waves-effect waves-light btn-large pink accent-3">Submit</button>
      </form>
      </div>

