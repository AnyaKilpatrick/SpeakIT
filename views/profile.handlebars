<div class="container" id="profileContent">  
  <div class="row">
    <div class="col s12 center">
      <img id="profileflagimage" class="circle proPic left-align">
      <h3 id="addFont" class="addFont">{{users.username}}</h3>
    </div>
    <div class="col s12 center">
      {{!-- This is the backup code that has an input field and a button to search for the language; because the drop down is now working we should be good! --}}
      {{!-- <input id="languagechoice" type="text" class="validate">
        <button type="button" id="languagebtn" href="language">Select Language</button> --}}
      <ul id = "dropdown" class = "pink accent-3 dropdown-content">
        <li id="lang" class="dropdownvalue" value="English">English</li>
        <li id="lang" class="dropdownvalue" value="German">German</li>
        <li id="lang" class="dropdownvalue" value="Spanish">Spanish</li>
        <li id="lang" class="dropdownvalue" value="Ukrainian">Ukrainian</li>
      </ul>
      <a class = "btn dropdown-button pink accent-3" href = "#" data-activates = "dropdown" id="languagechoice">Search For Friends</a>
    </div>
    <div class="col s12 m5 l4 addTopMargin proCard" id="aboutMeDiv">
      <div class="row center">
        <h5>About Me</h5>
      </div>
      <p class="flow-text">Language: {{users.language}}</p>
      <p class="flow-text">Gender: {{users.gender}}</p>
      <p class="flow-text">Age: {{users.age}}</p>
      <p class="flow-text">About me: {{users.about}}</p>
    </div>
    <div class="col s12 m5 l4 offset-l4 offset-m2 addTopMargin proCard" id="aboutMeDiv">
      <div class="row center">
        <h5>My Friends</h5>
      </div>
      <ul>
        {{!-- This returns the username of each user that the logged in user is connected with --}}
        {{#each friends}}
        <li>
          <a class="chatLink" href="/chat">chat</a> with {{requestee}}
          {{!-- Commenting this out because we're not returning any information beyond the connected user's username --}}
          <img class="friendFlag circle" data-lang="{{requesteeLang}}" width="50px" src="#">
          <span>{{requesteeLang}}</span>
        </li>
        {{!-- <li>
          <a href="/chat">chat</a> with Jan-Michael
          <img class="circle" width="50px" src="assets/images/flag-of-United-States-of-America.png">
        </li> --}}
        {{/each}}
      </ul>
    </div>
