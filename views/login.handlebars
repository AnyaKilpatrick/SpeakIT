    <div class="col m8 offset-2 ">
      <span>
        <img src="assets/images/speakitv2.png" class="center-align">
      </span>
    </div>
  </div>

  <!--navigation bar-->
  <nav>
    <div class="nav-wrapper grey darken-1">
      <a href="#!" class="brand-logo center"></a>
      <ul class="left hide-on-med-and-down">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="">Profile</a>
