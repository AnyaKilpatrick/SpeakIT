<main>
  <div class="row">

    <div class="row">
      <form action="/login" method="post" class="col s6 offset-s3 center-align">
      <div class="input-field col m6 newUserForm">
        <input name="username" userName="userName" id="newUserName" type="text" class="validate">
        <label class="pink-text text-accent -3" for="userName">User Name</label>
      </div>
      <div class="input-field col s6 newUserForm">
        <input name="password" id="newUserPassword" type="password" class="validate">
        <label class="pink-text text-accent -3" for="password">Password</label>
      </div>
        <!--materialize large button Sign up submit button-->
        <button id="logInUser" class="waves-effect waves-light btn-large pink accent-3 left-align">Login</button>
      </form>
    </div>
</main>