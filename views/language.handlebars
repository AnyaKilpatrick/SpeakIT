<!--this is the card that will display the results of the users that speak a certain language-->
{{#each users}}
<div class="card grey darken-1 z-depth-2 hoverable">
    <!--div class="card-image waves-effect waves-block waves-light"-->
      <img class="userlistImg flags" data-lang="{{language}}" src="assets/images/{{language}}.png">
    <!--/div-->
    <div class="card-content white-text" id="resultsCard">
      <span class="card-title activator white-text">{{username}}<i class="material-icons right pink-text text-accent-3">more_vert</i></span>
      <p>{{language}}</p>
      <a class="addBtn btn-floating btn-large waves-effect waves pink accent-3" id="addBtn" data-lang={{language}} value={{username}}><i class="material-icons right">add</i></a>
    </div>
    <div class="card-reveal grey lighten-1">
      <span class="card-title grey-text text-darken-4"><!--Username--><i class="material-icons right pink-text text-accent-3">close</i></span>
      <p><img src="assets/images/{{gender}}.png" style="width:30px">I am {{age}} year old.</p>
      <p>{{about}}</p>
    </div>
    
  </div>
</main>
